<Window x:Class="TravelPal.AddTravelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelPal"
        mc:Ignorable="d"
        Title="AddTravelWindow" Height="1200" Width="750" Background="MediumSlateBlue" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!--Elements-->
        <!--Labels-->
        <Label
            Content="TRAVELPAL"
            Grid.Column="1"
            Grid.Row="1"
            Grid.ColumnSpan="3"
            FontSize="30"
            FontFamily="Arial"
            FontWeight="Bold"
            Foreground="MintCream"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            />

        <Label
            Content="Add new travel"
            Grid.Column="1"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            FontSize="20"
            FontFamily="Arial"
            FontWeight="DemiBold"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Padding="0"
            />

        <Label
            Content="Destination"
            Grid.Column="1"
            Grid.Row="3"
            FontSize="15"
            FontFamily="Arial"
            FontWeight="DemiBold"
            Foreground="black"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Padding="0" Width="96"
            />
        <Label
            Content="Country"
            Grid.Column="1"
            Grid.Row="4"
            FontSize="15"
            FontFamily="Arial"
            FontWeight="DemiBold"
            Foreground="black"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Padding="0"
            />
        <Label
            Content="Travellers"
            Grid.Column="1"
            Grid.Row="5"
            FontSize="15"
            FontFamily="Arial"
            FontWeight="DemiBold"
            Foreground="black"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Padding="0"
            />
        <Label
            Content="Start date"
            Grid.Column="1"
            Grid.Row="6"
            FontSize="15"
            FontFamily="Arial"
            FontWeight="DemiBold"
            Foreground="black"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Padding="0"
            />
        <Label
            Content="End date"
            Grid.Column="1"
            Grid.Row="7"
            FontSize="15"
            FontFamily="Arial"
            FontWeight="DemiBold"
            Foreground="black"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Padding="0"
            />

        <Label
            Content="Type of travel"
            Grid.Column="1"
            Grid.Row="8"
            FontSize="15"
            FontFamily="Arial"
            FontWeight="DemiBold"
            Foreground="black"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Padding="0"
            />
        <Label
            Name="lblWorkTripOrVacation"
            Content=""
            Grid.Column="1"
            Grid.Row="9"
            FontSize="15"
            FontFamily="Arial"
            FontWeight="DemiBold"
            Foreground="black"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Padding="0"
            />
        <Label
            Content="Packing list"
            Grid.Column="1"
            Grid.Row="10"
            FontSize="15"
            FontFamily="Arial"
            FontWeight="DemiBold"
            Foreground="black"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Padding="10 0 0 0"
            />
        <Label
            Content="Add new item to packing list"
            Grid.Column="3"
            Grid.Row="10"
            Grid.ColumnSpan="2"
            FontSize="13"
            FontFamily="Arial"
            Foreground="black"
            FontStyle="Italic"
            FontWeight="DemiBold"
            VerticalAlignment="center"
            HorizontalAlignment="Left"
            Padding="10 0 0 0"
            />
        <Label
            Content="Item"
            Grid.Column="3"
            Grid.Row="10"
            Grid.ColumnSpan="2"
            FontSize="13"
            FontFamily="Arial"
            Foreground="black"
            VerticalAlignment="bottom"
            HorizontalAlignment="Left"
            Padding="10 0 0 5"
            />
        <Label
            Content="Quantity"
            Grid.Column="3"
            Grid.Row="11"
            FontSize="13"
            FontFamily="Arial"
            Foreground="black"
            VerticalAlignment="center"
            HorizontalAlignment="Left"
            Padding="50 5 0 0"
            Visibility="visible"
            />

        <!--Textboxes-->
        <TextBox
            Name="txtDestination"
            Grid.Column="2"
            Grid.Row="3"
            Height="30"
            VerticalContentAlignment="Center"
            Background="MintCream"
            />
        <TextBox
            Name="txtTravellers"
            Grid.Column="2"
            Grid.Row="5"
            Height="30"
            VerticalContentAlignment="Center"
            Background="MintCream"
            />
        <TextBox
            Name="txtMeetingDetails"
            Grid.Column="2"
            Grid.Row="9"
            Height="30"
            Visibility="Hidden"
            VerticalContentAlignment="Center"
            Background="MintCream"
            />
        <TextBox
            Name="txtDocument"
            Grid.Column="3"
            Grid.Row="10"
            Grid.ColumnSpan="2"
            Height="25"
            VerticalContentAlignment="Center"
            VerticalAlignment="bottom"
            Background="MintCream"
            Margin="50 0 0 0"
            />
        <TextBox
            Name="txtQuantity"
            Grid.Column="4"
            Grid.Row="11"
            Height="25"
            VerticalContentAlignment="Center"
            Background="MintCream"
            Visibility="visible"
            />

        <!--Listboxes-->
        <ListBox
            Grid.Column="2"
            Grid.Row="10"
            Grid.RowSpan="2"
            />


        <!--Comboboxes-->
        <ComboBox
            Name="cbCountry"
            Grid.Column="2"
            Grid.Row="4"
            Height="30"
            VerticalContentAlignment="Center"
            Background="MintCream"
            />
        <ComboBox
            Name="cbTypeOfTravel"
            Grid.Column="2"
            Grid.Row="8"
            Height="30"
            VerticalContentAlignment="Center"
            Background="MintCream" SelectionChanged="cbTypeOfTravel_SelectionChanged"
            />
        
        <!--Datepickers-->
        <DatePicker
            Name="dpStartDate"
            Grid.Column="2"
            Grid.Row="6"
            Height="30"
            FontSize="13"
            VerticalContentAlignment="Center"
            BorderBrush="#FFABADB3"
            />
        <DatePicker
            Name="dpEndDate"
            Grid.Column="2"
            Grid.Row="7"
            Height="30"
            FontSize="13"
            VerticalContentAlignment="Center"
            BorderBrush="#FFABADB3"
            />
        
        <!--Checkboxes-->
        <CheckBox
            Name="cxAllInclusive"
            Content="Yes, it's All Inclusive!"
            Grid.Column="2"
            Grid.Row="9"
            Height="30"
            FontSize="15"
            VerticalContentAlignment="Center"
            Visibility="Hidden"
            />
        <CheckBox
            Name="cxTravelDocument"
            Content="Item is a travel document"
            Grid.Column="3"
            Grid.Row="11"
            Grid.ColumnSpan="2"
            FontSize="13"
            VerticalContentAlignment="Center"
            VerticalAlignment="Top"
            HorizontalAlignment="left"
            Margin="50 5 0 0"
            />
        <CheckBox
            Name="cxTravelDocumentRequired"
            Content="Required"
            Grid.Column="3"
            Grid.Row="11"
            Grid.ColumnSpan="2"
            FontSize="13"
            VerticalContentAlignment="center"
            HorizontalAlignment="Left"
            Margin="50 5 0 0"
            Visibility="Hidden"
            />

        <!--Buttons-->
        <Button
            Name="btnAdd"
            Content="Add travel"
            Grid.Column="2"
            Grid.Row="14"
            Height="45"
            Width="100"
            FontSize="13"
            Background="DarkTurquoise" Click="btnAdd_Click"
            />
        <Button
            Name="btnReturn"
            Content="Return"
            Grid.Column="4"
            Grid.Row="1"
            Height="30"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            FontSize="15"
            Background="Transparent"
            BorderBrush="Transparent"
            Foreground="DarkOrange"
            Margin="0 0 5 0" Click="btnReturn_Click"
            />
        <Button
            Name="btnAddItemToPackingList"
            Content="Add item"
            Grid.Column="3"
            Grid.Row="11"
            Grid.ColumnSpan="2"
            Grid.RowSpan="2"
            Height="30"
            Width="70"
            FontSize="13"
            VerticalAlignment="center"
            Background="DarkTurquoise" Click="btnAdd_Click"
            />
    </Grid>
</Window>
